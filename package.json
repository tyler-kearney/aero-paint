{
	"name": "aero-paint",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "electron/main.ts",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"electron": "tsx electron/main.ts",
		"electron:dev": "wait-on http://localhost:5173 && electron .",
		"start": "npx concurrently \"npm run dev\" \"npm run electron:dev\""
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^25.0.9",
		"concurrently": "^9.2.1",
		"electron": "^40.0.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"wait-on": "^9.0.3"
	}
}
